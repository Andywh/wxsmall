/* components/spu-scroll/index.wxss */
.container {
    padding: 42rpx 0 34rpx 28rpx;
}

.title {
    width: 692rpx;
    height: 90rpx;
}

.price-unit {
    font-size: 24rpx !important;
    color: #157658 !important;
}

.price-value {
    box-sizing: border-box;
    font-size: 26rpx !important;
    color: #157658 !important;
}

.scroll-view {
    margin-top: 28rpx;
    display: flex;
    flex-direction: row;
}

.inner {
    display: flex;
    flex-direction: row;
}

.spu-container {
    margin-right: 60rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.spu-text {
    font-size: 20rpx;
    color: #666666;
    margin-top: 20rpx;
    /*text-overflow: ellipsis;*/
